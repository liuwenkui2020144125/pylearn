total = 0
count = 0
average = 0
input_num = []
smallest = 0
biggest = 0
while True:
    num = input("pleasen input number")
    if num =='done':
        break;
    else:
        try:
            num = float(num)
            input_num.append(num)
        except:
            print("Invalid input")

    for i in input_num:
        total = total + i
        count = count + 1
average = total/count

print(total, count, average)
